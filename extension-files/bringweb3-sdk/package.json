{
  "name": "@emurgo/bringweb3-chrome-extension-kit",
  "version": "1.3.11",
  "description": "Crypto cashback integration kit for crypto outlets extension",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Emurgo/bring-chromeExtension"
  },
  "scripts": {
    "watch": "tsup index.ts --env.IFRAME_URL=http://localhost:5173 --format cjs,esm --dts --watch",
    "build": "tsup index.ts --format cjs,esm --dts --minify",
    "lint": "tsc",
    "test": "vitest --coverage",
    "release": "yarn build && changeset publish"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/chrome": "^0.0.268",
    "@vitest/coverage-v8": "^2.0.5",
    "tsup": "^8.2.1",
    "typescript": "^5.5.3",
    "vitest": "^2.0.5"
  },
  "keywords": [
    "cashback",
    "crypto",
    "bringweb3"
  ],
  "dependencies": {
    "uuid": "^11.0.3"
  }
}
